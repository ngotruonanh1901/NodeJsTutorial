<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Page</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <section>
      <div class="w3-container">
        <table class="w3-table-all">
          <thead>
            <tr class="w3-light-grey">
              <th>Id</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].name %></td>
              <td class="action">
                <button>
                  <a href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                </button>
                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                  <button>Edit</button>
                </form>
                <form action="/delete-user" method="POST">
                  <input
                    type="text"
                    hidden
                    value="<%= dataUser[i].id %>"
                    name="userId"
                  />
                  <button>Delete</button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="create-form">
        <form action="/create-new-user" method="POST">
          <label>Name:</label>
          <input
            class="input-name"
            type="text"
            name="lastName"
            placeholder="Enter your last name"
          />
          <input type="submit" value="Submit" class="create-btn" />
        </form>
      </div>
    </section>
  </body>
</html>
